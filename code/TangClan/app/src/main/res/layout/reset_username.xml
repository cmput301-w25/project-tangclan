<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:background="#f4f2e6">

    <RelativeLayout
        android:id="@+id/form_passwo_1"
        android:layout_width="364dp"
        android:layout_height="39dp"
        android:layout_marginTop="401dp"
        android:background="@drawable/form_passwo"
        android:clipToOutline="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/new_username2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Confirm New Username"
            android:textAppearance="@style/new_username" />
    </RelativeLayout>

    <TextView
        android:id="@+id/your_identi"
        android:layout_width="364dp"
        android:layout_height="29dp"
        android:layout_marginTop="271dp"
        android:gravity="center"
        android:text="@string/your_identi"
        android:textAppearance="@style/your_identi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/please_set_2"
        android:layout_width="364dp"
        android:layout_height="19dp"
        android:layout_marginTop="318dp"
        android:gravity="center"
        android:text="@string/please_set_2"
        android:textAppearance="@style/please_set_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/form_passwo_2"
        android:layout_width="364dp"
        android:layout_height="39dp"
        android:layout_marginTop="346dp"
        android:background="@drawable/form_passwo"
        android:clipToOutline="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/new_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/new_username"
            android:textAppearance="@style/new_username" />
    </RelativeLayout>

    <Button
        android:id="@+id/button_logi"
        android:layout_width="364dp"
        android:layout_height="61dp"
        android:layout_marginTop="451dp"
        android:backgroundTint="#d38c6f"
        android:clipToOutline="true"
        android:text="Log in"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
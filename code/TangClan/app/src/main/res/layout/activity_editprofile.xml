<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".editprofileActivity">


    <!-- Auto layout, variables, and unit scale are not yet supported NOTE: PUT CONSTRAINTS-->
    <RelativeLayout
        android:id="@+id/edit_profil"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:clipToOutline="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/name"
            android:layout_width="147dp"
            android:layout_height="21dp"
            android:layout_below="@+id/moodly"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="136dp"
            android:layout_marginTop="131dp"
            android:gravity="center_horizontal|top"
            android:text="@string/name"
            android:textAppearance="@style/nameDisplay" />

        <TextView
            android:id="@+id/username"
            android:layout_width="198dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="108dp"
            android:layout_marginTop="217dp"
            android:layout_marginEnd="105dp"
            android:gravity="center_horizontal|top"
            android:text="@string/username"
            android:textAppearance="@style/usernameDisplay" />

        <TextView
            android:id="@+id/nameDisplay"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="285dp"
            android:gravity="center_horizontal|top"
            android:text="@string/name"
            android:textAppearance="@style/nameDisplay" />

        <TextView
            android:id="@+id/email"
            android:layout_width="77dp"
            android:layout_height="36dp"
            android:layout_below="@+id/nameDisplay"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="-1dp"
            android:layout_marginTop="49dp"
            android:gravity="center_horizontal|top"
            android:text="@string/email"
            android:textAppearance="@style/email" />

        <TextView
            android:id="@+id/usernameDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="42dp"
            android:gravity="center_horizontal|top"
            android:text="@string/username"
            android:textAppearance="@style/usernameDisplay" />

        <TextView
            android:id="@+id/passwordDisplay"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_below="@+id/usernameDisplay"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="53dp"
            android:gravity="center_horizontal|top"
            android:text="@string/password"
            android:textAppearance="@style/password" />


        <RelativeLayout
            android:id="@+id/form_full_n"
            android:layout_width="312dp"
            android:layout_height="39dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="288dp"
            android:layout_marginEnd="14dp"
            android:background="@drawable/form_full_n"
            android:clipToOutline="true">

            <EditText
                android:id="@+id/edit_name_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/edit_full_n"
                android:inputType="text"
                android:textAppearance="@style/edit_style_text" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/form_email"
            android:layout_width="312dp"
            android:layout_height="39dp"
            android:layout_below="@+id/form_full_n"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="14dp"
            android:background="@drawable/form_full_n"
            android:clipToOutline="true">

            <EditText
                android:id="@+id/edit_email_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/edit_email_"
                android:inputType="text"
                android:textAppearance="@style/edit_style_text" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/form_userna"
            android:layout_width="312dp"
            android:layout_height="39dp"
            android:layout_below="@+id/form_email"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="83dp"
            android:layout_marginTop="39dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/form_full_n"
            android:clipToOutline="true">

            <EditText
                android:id="@+id/new_username_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/new_usernam"
                android:inputType="text"
                android:textAppearance="@style/edit_style_text" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/form_passwo"
            android:layout_width="312dp"
            android:layout_height="39dp"
            android:layout_below="@+id/form_userna"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/form_full_n"
            android:clipToOutline="true">

            <EditText
                android:id="@+id/new_password_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/new_passwor"
                android:inputType="text"
                android:textAppearance="@style/edit_style_text" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/confirm_password_input"
            android:layout_width="312dp"
            android:layout_height="39dp"
            android:layout_below="@+id/form_passwo"
            android:layout_alignParentLeft="true"

            android:layout_marginLeft="81dp"
            android:layout_marginTop="37dp"
            android:background="@drawable/form_full_n"
            android:clipToOutline="true">

            <EditText
                android:id="@+id/confirm_new_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:hint="@string/confirm_new"
                android:textAppearance="@style/edit_style_text" />
        </RelativeLayout>

        <TextView
            android:id="@+id/moodly"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="132dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="129dp"
            android:gravity="center_horizontal|top"
            android:text="@string/moodly"
            android:textAppearance="@style/moodly" />

        <Button
            android:id="@+id/submit_changes_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="80dp"

            android:layout_marginLeft="80dp"
            android:layout_marginTop="650dp"
            android:layout_marginEnd="134dp"
            android:layout_marginBottom="19dp"
            android:background="#49311E"
            android:text="Submit Changes"
            />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
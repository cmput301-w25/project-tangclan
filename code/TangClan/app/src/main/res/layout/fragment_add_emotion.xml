<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Top bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="Owl icon"
            android:src="@drawable/ic_owl" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="moodly"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/closeIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Close"
            android:src="@drawable/baseline_cancel_24" />
    </LinearLayout>

    <!-- Question -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="How are you feeling today?"
        android:textSize="18sp" />

    <!-- Emoticons (just an example with a horizontal layout) -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/emotionHappy"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:contentDescription="Happy"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_emotion_happy"
                android:clickable="true"
                android:focusable="true" />

            <ImageButton
                android:id="@+id/emotionCalm"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:contentDescription="Calm"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_emotion_calm"
                android:clickable="true"
                android:focusable="true" />

            <ImageButton
                android:id="@+id/emotionSurprised"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:contentDescription="Surprised"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_emotion_surprised"
                android:clickable="true"
                android:focusable="true" />

            <ImageButton
                android:id="@+id/emotionDisgusted"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:contentDescription="Disgusted"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_emotion_disgusted"
                android:clickable="true"
                android:focusable="true" />

            <ImageButton
                android:id="@+id/emotionAngry"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:contentDescription="Angry"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_emotion_angry"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Bottom row (Cancel, Next) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/emotionConfused"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:contentDescription="Confused"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_emotion_confused"
            android:clickable="true"
            android:focusable="true" />

        <ImageButton
            android:id="@+id/emotionTerrfied"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:contentDescription="Terrified"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_emotion_terrified"
            android:clickable="true"
            android:focusable="true" />

        <ImageButton
            android:id="@+id/emotionNoIdea"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:contentDescription="No Idea"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_emotion_no_idea"
            android:clickable="true"
            android:focusable="true" />

        <ImageButton
            android:id="@+id/emotionAshamed"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:contentDescription="Ashamed"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_emotion_ashamed"
            android:clickable="true"
            android:focusable="true" />

        <ImageButton
            android:id="@+id/emotionSad"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:contentDescription="Sad"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_emotion_sad"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/emotionAnxious"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:contentDescription="Anxious"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_emotion_anxious"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnCancelEmotion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#49311E"
            android:text="Cancel" />

        <Button
            android:id="@+id/btnNextEmotion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#49311E"
            android:text="Next" />
    </LinearLayout>
</LinearLayout>

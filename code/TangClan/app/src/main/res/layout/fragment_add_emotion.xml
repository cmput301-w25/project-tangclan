<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_gradient_background"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Top bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/inter_semibold"
            android:gravity="center"
            android:text="       moodly"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/closeIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Close"
            android:src="@drawable/baseline_cancel_24" />
    </LinearLayout>

    <!-- Question -->

    <!-- Emotion Buttons Grid -->
    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="275dp"
        android:gravity="center"
        android:orientation="vertical">


            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:contentDescription="Owl icon"
                android:src="@drawable/ic_owl" />

            <TextView
                android:layout_width="363dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/inter_medium"
                android:letterSpacing="-0.03"
                android:text="Hey there, \nHow are you feeling?"
                android:textColor="@color/black"
                android:textSize="24sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Choose an emoticon to describe how you feel"
        android:textSize="16sp"
        android:letterSpacing="-0.03"
        android:fontFamily="@font/inter"
        android:gravity="center"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:columnCount="4"
        android:rowCount="3">

        <!-- Row 1 -->
        <ImageButton
            android:id="@+id/emotionHappy"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Happy"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_emotion_happy" />

        <ImageButton
            android:id="@+id/emotionCalm"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Calm"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_emotion_calm" />

        <ImageButton
            android:id="@+id/emotionSurprised"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Surprised"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_emotion_surprised" />

        <ImageButton
            android:id="@+id/emotionDisgusted"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Disgusted"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_emotion_disgusted" />

        <!-- Row 2 -->
        <ImageButton
            android:id="@+id/emotionConfused"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Confused"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_emotion_confused" />

        <ImageButton
            android:id="@+id/emotionTerrfied"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Terrified"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_emotion_terrified" />

        <ImageButton
            android:id="@+id/emotionAngry"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Angry"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_emotion_angry" />

        <ImageButton
            android:id="@+id/emotionAnxious"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Anxious"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_emotion_anxious" />

        <!-- Row 3 -->
        <ImageButton
            android:id="@+id/emotionSad"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Sad"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_emotion_sad" />

        <ImageButton
            android:id="@+id/emotionAshamed"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Ashamed"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_emotion_ashamed" />

        <ImageButton
            android:id="@+id/emotionNoIdea"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="No Idea"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_emotion_no_idea" />
    </GridLayout>


    <Button
        android:id="@+id/btnNextEmotion"
        android:layout_width="match_parent"
        android:paddingVertical="12dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="10dp"
        android:backgroundTint="@color/black"
        android:text="Next"
        android:fontFamily="@font/inter_semibold"
        android:letterSpacing="-0.03"
        android:textColor="@color/white"
        app:strokeWidth="2dp"
        app:strokeColor="@color/black"
        android:textSize="16sp"
        app:cornerRadius="24dp"/>

    <!-- Action Buttons -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCancelEmotion"
        android:layout_width="match_parent"
        android:paddingVertical="12dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:backgroundTint="@android:color/transparent"
        android:text="Cancel"
        android:fontFamily="@font/inter_semibold"
        android:letterSpacing="-0.03"
        android:textColor="@color/black"
        app:strokeWidth="2dp"
        app:strokeColor="@color/black"
        android:textSize="16sp"
        app:cornerRadius="24dp" />
</LinearLayout>
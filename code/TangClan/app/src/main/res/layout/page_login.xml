<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/moodly"
        android:layout_width="293dp"
        android:layout_height="96dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="148dp"
        android:gravity="center_horizontal|top"
        android:text="@string/moodly"
        android:textAppearance="@style/moodly"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/form_userna"
        android:layout_width="364dp"
        android:layout_height="39dp"
        android:background="@drawable/form_userna"
        android:clipToOutline="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moodly">

        <EditText
            android:id="@+id/username"
            android:layout_width="221dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal|top"
            android:hint="@string/username"
            android:background="@android:color/transparent"
            android:textAppearance="@style/username" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/form_passwo"
        android:layout_width="364dp"
        android:layout_height="39dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/form_passwo"
        android:clipToOutline="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/form_userna">

        <EditText
            android:id="@+id/password"
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:gravity="center_horizontal|top"
            android:hint="@string/password"
            android:password="true"
            android:textAppearance="@style/password" />
    </RelativeLayout>


    <TextView
        android:id="@+id/forgot_pass"
        android:layout_width="98dp"
        android:layout_height="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal|top"
        android:text="@string/forgot_pass"
        android:textAppearance="@style/forgot_pass"
        app:layout_constraintEnd_toEndOf="@+id/form_passwo"
        app:layout_constraintTop_toBottomOf="@+id/form_passwo" />

    <Button
        android:id="@+id/login"
        android:layout_width="364dp"
        android:layout_height="61dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_logi"
        android:clickable="true"
        android:clipToOutline="true"
        android:gravity="center"
        android:text="Log in"
        android:textAppearance="@style/sign_up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forgot_pass" />

    <TextView
        android:id="@+id/don_t_have_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="@string/don_t_have_"
        android:textAppearance="@style/don_t_have_"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login" />

    <TextView
        android:id="@+id/some_id2"
        android:layout_width="72dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal|top"
        android:text="@string/some_id2"
        android:textAppearance="@style/some_id2"
        app:layout_constraintEnd_toEndOf="@+id/untitled_32"
        app:layout_constraintTop_toBottomOf="@+id/don_t_have_" />

    <ImageView
        android:id="@+id/untitled_32"
        android:layout_width="312dp"
        android:layout_height="311dp"
        android:background="@drawable/own_picture_signup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/don_t_have_" />


</androidx.constraintlayout.widget.ConstraintLayout>